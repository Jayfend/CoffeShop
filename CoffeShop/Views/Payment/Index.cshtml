
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page payment-page">
    <section class="payment-form dark">
        <div class="container">
            <div class="block-heading">
                <h2>Payment</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc quam urna, dignissim nec auctor in, mattis vitae leo.</p>
            </div>
            <form>
                <div class="products">
                    <h3 class="title">Checkout</h3>
                    <div class="item">
                        <span class="price">20.000₫</span>
                        <p class="item-name">Product 1</p>
                        <p class="item-description">Discount: No</p>
                    </div>
                    <div class="item">
                        <span class="price">12.000₫</span>
                        <p class="item-name">Product 2</p>
                        <p class="item-description">Discount: No</p>
                    </div>
                    <div class="total">Total<span class="price">32.000₫</span></div>
                </div>
                <div class="card-details">
                    <h3 class="title">Customer Information</h3>
                    <div class="row">
                        <div class="form-group col-sm-7">
                            <label for="card-holder">Phone Number</label>
                            <input id="card-holder" type="text" class="form-control" placeholder="Phone Number" aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>              
                        <div class="form-group col-sm-8">
                            <label for="card-number">Address</label>
                            <input id="card-number" type="text" class="form-control" placeholder="Address" aria-label="Card Holder" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group col-sm-12">
                            <button type="button" class="btn btn--primary btn-block">Proceed</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>

