@model  List<ViewModel.ProductViewModel> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Preloader -->
<div id="loader-wrapper">
    <div id="loader"></div>
    <div class="loader-section section-left"></div>
    <div class="loader-section section-right"></div>
</div>
<section class="tm-welcome-section">
    <div class="container tm-position-relative">
        <div class="tm-lights-container">
            <img src="/Assets/img/light.png" alt="Light" class="light light-1">
            <img src="/Assets/img/light.png" alt="Light" class="light light-2">
            <img src="/Assets/img/light.png" alt="Light" class="light light-3">
        </div>
        <div class="row tm-welcome-content">
            <h2 class="white-text tm-handwriting-font tm-welcome-header"><img src="/Assets/img/header-line.png" alt="Line" class="tm-header-line">&nbsp;Our Menu&nbsp;&nbsp;<img src="/Assets/img/header-line.png" alt="Line" class="tm-header-line"></h2>
            <h2 class="gold-text tm-welcome-header-2">Cafe House</h2>
            <a href="#main" class="tm-more-button tm-more-button-welcome">Read More</a>
        </div>
        <img src="/Assets/img/table-set.png" alt="Table Set" class="tm-table-set img-responsive">
    </div>
</section>
<div class="tm-main-section light-gray-bg">
    <div class="container" id="main">
        <section class="tm-section row">
            <div class="col-lg-9 col-md-9 col-sm-8">
                <h2 class="tm-section-header gold-text tm-handwriting-font">Variety of Menu</h2>
                @*<h2>Cafe House</h2>*@
                <p class="tm-welcome-description">Cafe House has so many kind of coffee.</p>
                @*<a href="#" class="tm-more-button margin-top-30">Read More</a>*@
            </div>
            <div class="col-lg-3 col-md-3 col-sm-4 tm-welcome-img-container">
                <div class="inline-block shadow-img">
                    <img src="/Assets/img/1.jpg" alt="Image" class="img-circle img-thumbnail">
                </div>
            </div>
        </section>
        <section class="tm-section row">
            <div class="col-lg-12 tm-section-header-container margin-bottom-30">
                <h2 class="tm-section-header gold-text tm-handwriting-font"><img src="/Assets/img/logo.png" alt="Logo" class="tm-site-logo"> Our Menus</h2>
                <div class="tm-hr-container"><hr class="tm-hr"></div>
            </div>
            <div>
                <div class="col-lg-3 col-md-3">
                    <div class="tm-position-relative margin-bottom-30">
                        <nav class="tm-side-menu">
                            <ul>
                                <li><a href="?categoryID=1">Affogato</a></li>
                                <li><a href="?categoryID=2">Caffè Americano</a></li>
                                <li><a href="?categoryID=3">Caffè latte</a></li>
                                <li><a href="?categoryID=4">Coffee milk</a></li>
                                <li><a href="?categoryID=5">Café mocha</a></li>
                                <li><a href="?categoryID=6">Cappuccino</a></li>
                                <li><a href="?categoryID=7">Espresso</a></li>
                                <li><a href="?categoryID=8">Iced coffee</a></li>
                                <li><a href="?categoryID=9">Instant coffee</a></li>
                                <li><a href="?categoryID=10">Mocha</a></li>
                                <li><a href="?categoryID=11">Black coffee</a></li>
                            </ul>
                        </nav>
                        <img src="/Assets/img/vertical-menu-bg.png" alt="Menu bg" class="tm-side-menu-bg">
                    </div>
                </div>
                <div class="tm-menu-product-content col-lg-9 col-md-9">
                    <!-- menu content -->
                    @foreach (var item in Model)
                    {
                        string base64String = Convert.ToBase64String(item.Image, 0, item.Image.Length);
                        <div class="tm-product">
                            
                            <img src="data:image/jpg;base64,@base64String" class="tm-product-img" alt="Product">
                            
                           
                            <div class="tm-product-text">
                                <h3 class="tm-product-title">@item.ProductName</h3>
                                <p class="tm-product-description">@item.Description</p>
                            </div>
                            
                                @if (User.Identity.IsAuthenticated)
                                {   <div class="tm-product-price">
                                    <a onclick="AddCart(@item.ProductId)" class="tm-product-price-link tm-handwriting-font"><span class="tm-product-price-currency">₫</span>@item.Price</a>
                                    </div>
                                }
                                else
                                {   <div class="tm-product-price">
                                    <a href="/Login/Index" class="tm-product-price-link tm-handwriting-font"><span class="tm-product-price-currency">₫</span>@item.Price</a>
                                     </div>     }


                        </div>

                    }

                </div>
                   
               
               
            </div>

        </section>
    </div>
</div>

