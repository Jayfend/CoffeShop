@model ViewModel.AccountViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Assets/css/Login.css">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" @(ViewBag.IsLogin ? "checked" : "")><label for="tab-1" class="tab">Sign In</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up" @(!ViewBag.IsLogin ? "checked" : "")><label for="tab-2" class="tab">Sign Up</label>
                <div class="login-form">
                    <div class="sign-in-htm">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            <div class="group">
                                <label for="user" class="label">Username</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "input", @required = "required" })
                                @*<input id="user" type="text" class="input">*@
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Password</label>
                                @Html.TextBoxFor(m => m.Password, new { @class = "input", @type = "password", @required = "required" })
                                @*<input id="pass" type="password" class="input" data-type="password">*@
                            </div>
                            <div class="group">
                                <input id="check" type="checkbox" class="check" checked>
                                <label for="check"><span class="icon"></span> Keep me Signed in</label>
                            </div>
                            <div class="group">
                                <input type="submit" class="button" value="Sign In">
                            </div>
                        }
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="#forgot">Forgot Password?</a>
                        </div>
                    </div>
                    <div class="sign-up-htm">
                        
                        <div class="group">
                            <label for="signup-user" class="label">Username</label>
                          
                            <input id="signup-user" type="text" class="input">
                        </div>
                        <div class="group">
                            <label for="signup-password" class="label">Password</label>
                          
                            <input id="signup-password" type="password" class="input" data-type="password" onkeyup="check()">
                        </div>
                        <div class="group">
                            <label for="signup-repassword" class="label">Repeat Password</label>
                           
                            <input id="signup-repassword" type="password" class="input" data-type="password" onkeyup="check()">
                            <span id='confirmpassword-message' class="message"></span>
                        </div>
                        <div class="group">
                            <label for="signup-mail" class="label">Email Address</label>
                           
                            <input id="signup-mail" type="text" class="input">
                        </div>
                      
                        <div class="group">
                            <button id="SignUpBtn" type="submit" class="button" onclick="SignUp()">Sign Up</button>
                        </div>
                     
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <label for="tab-1"><a>Already Member?</a> </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Assets/js/MycustomJs.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
</body>

</html>