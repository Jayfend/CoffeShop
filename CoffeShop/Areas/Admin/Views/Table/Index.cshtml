                    <div class="table-responsive scrollbar">
                        <table class="table">
                            <thead>
                                <tr>
                                    
                                    <th>Name</th>
                                    <th>Total Price</th>
                                    <th>Phone Number</th>
                                    <th>Address</th>
                                    <th>Purchase Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        
                                        <td>@item.Name</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Address</td>
                                        <td>@item.Purchasedate</td>
                                        <td><label class="badge badge-success">Purchased</label></td>
                                    </tr>
                                }


<                   </table>
                    </div>
                </div>
            </div>
        </div>
