@model List<ViewModel.BillAdminViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Basic Tables </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tables</a></li>
                <li class="breadcrumb-item active" aria-current="page">Data View</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body ">
                    <h4 class="card-title">Bill Table</h4>
                    
                    <div class="table-responsive scrollbar">
                        <table class="table">
                            <thead>
                                <tr>
                                    
                                    <th>Name</th>
                                    <th>Total Price</th>
                                    <th>Phone Number</th>
                                    <th>Address</th>
                                    <th>Purchase Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        
                                        <td>@item.Name</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Address</td>
                                        <td>@item.Purchasedate</td>
                                        <td><label class="badge badge-success">Purchased</label></td>
                                    </tr>
                                }


<                   </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                   
                    
                    <div class="table-responsive scrollbar">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Created Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.AccountList)
                                {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@item.CreatedDate</td>
                                    @*<td class="text-danger"> 28.76% <i class="mdi mdi-arrow-down"></i></td>*@
                                    <td><label class="badge badge-warning">Activating</label></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bill Detail</h4>
                    <p class="card-description">
                       
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th> Name </th>
                                    <th> Address </th>
                                    <th> Progress </th>

                                    <th> Products </th>
                                    <th> Phone Number </th>
                                    <th> Purchased Time </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.BillDetail)
                                {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.address</td>
                                    <td>
                                        <div class="progress">
                                            @foreach (var s in @item.Product)
                                            {  
                                                <div class="progress-bar bg-success" role="progressbar" style="width: @s.quantity%" aria-valuenow="@s.quantity" aria-valuemin="0" aria-valuemax="100" ></div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @foreach (var s in @item.Product)
                                        {
                                            @s.ProductName
                                            @s.quantity


                                        }
                                                                    </td>

                                    <td>@item.phonenumber</td>
                                    <td>@item.CreatedDate</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Buy Amount table</h4>
                    <p class="card-description">
                      
                    </p>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> Product Name </th>
                                    <th> Product Price </th>
                                    <th> Progress </th>
                                    <th> Amount </th>
                                    <th> Created Date </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.HotProduct)
                                {
                                    <tr>
                                        <td> @item.ProductName </td>
                                        <td> @item.Price </td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" role="progressbar" style="width:  @item.Amount% " aria-valuenow="@item.Amount" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </td>
                                        <td> @item.Amount </td>
                                        <td> @item.CreatedDate </td>
                                        
                                    </tr>
                                }
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Inverse table</h4>
                    <p class="card-description">
                       
                    </p>
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>

                                    <th> Name </th>
                                    <th> Email </th>
                                    <th> Subject </th>
                                    <th> Content</th>
                                    <th> Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Reviews)
                                { <tr>
                                    <td> @item.Name </td>
                                    <td> @item.Email </td>
                                    <td> @item.Subject </td>
                                    <td> @item.Message </td>
                                    <td> @item.CreateDate </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">TProduct View</h4>
                    <p class="card-description">
                       
                    </p>
                    <div class="table-responsive">
                        <table class="table table-bordered table-contextual">
                            <thead>
                                <tr>
                                    <th> ProductID </th>
                                    <th> Product Name </th>
                                    <th>Category Id</th>
                                    <th> Price </th>
                                    <th>Discount</th>
                                    <th>Description</th> 
                                    <th>Created Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Product)
                                {
                                <tr class="table-info">
                                    <td> @item.ProductId </td>
                                    <td> @item.ProductName </td>
                                    <td> @item.ProductCategoryId </td>
                                    <td> @item.Price </td>
                                    <td> @item.Discount  </td>
                                    <td>@item.Description</td>
                                    <td>@item.CreatedDate</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


